<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.bigwork.bigwork_apitest.dal.mapper.ResourceIterationDataMapper">



    <sql id="columns">
        resource_data_id,
        iteration,
        parent,
        workspace_id,
        update_user_id,
        gmt_create,
        gmt_update
    </sql>


    <resultMap id="resultMap" type="ResourceIterationDo">
        <id property="resourceDataId" column="resouce_data_id"/>
        <result property="iteration" column="iteration"/>
        <result property="parent" column="parent"/>
        <result property="workspaceId" column="workspace_id"/>
        <result property="updateUserId" column="update_user_id"/>
        <result property="gmtCreate" column="gmt_create"/>
        <result property="gmtUpdate" column="gmt_update"/>
    </resultMap>
    <insert id="add">
        insert into ${resourceIterationDb}(
        <include refid="columns"/>
        )
        values(
                #{resourceIterationDo.resourceDataId},
                #{resourceIterationDo.iteration},
                #{resourceIterationDo.parent},
                #{resourceIterationDo.workspaceId},
                #{resourceIterationDo.updateUserId},
                #{resourceIterationDo.gmtCreate},
                #{resourceIterationDo.gmtUpdate}
        )
    </insert>
    <select id="getDetailById" resultMap="resultMap">
        SELECT <include refid="columns"/>
        FROM ${resourceIterationDb}
        WHERE resource_data_id = #{resourceDataId}
        AND workspace_id = #{workspaceId}
        AND iteration = #{iteration}

    </select>

    <delete id="deleteById">
        DELETE FROM ${resourceIterationDb}
        WHERE resource_data_id = #{resourceDataId}
        AND workspace_id = #{workspaceId}
        AND iteration = #{iteration}
    </delete>

    <update id="updateParent">
        update ${resourceIterationDb}
        set parent = #{parent}
        where resource_data_id = #{resourceDataId}
        and workspace_id = #{workspaceId}
        and iteration = #{iteration}
    </update>


    <select id="getAll" resultMap="resultMap">
        SELECT <include refid="columns"/>
        FROM ${resourceIterationDb}
    </select>


</mapper>